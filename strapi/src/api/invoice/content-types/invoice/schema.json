        "Purchase"
      ]
    },
    "customer": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::customer.customer"
    },
    "items": {
      "type": "component",
      "component": "component.invoice-items",
      "repeatable": true
    },
    "subTotal": {
      "type": "decimal"
    },
    "cashDiscount": {
      "type": "decimal"
    },
    "grandTotal": {
      "type": "decimal"
    }
  }
}
